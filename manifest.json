{
  "name": "Salesforce AppExchange Listing Information",
  "description": "Further info to AppExchange Listing Pages",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "clipboardWrite"   
  ],
  "content_scripts": [
    {
      "js": ["scripts/main.js"],
      "matches": [
        "https://appexchange.salesforce.com/appxListingDetail*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/shareVars.js"
      ],
      "matches": [
        "https://appexchange.salesforce.com/*"
      ]
    }
  ]
}