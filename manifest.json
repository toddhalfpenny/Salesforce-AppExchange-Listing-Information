{
  "name": "Salesforce AppExchange Listing Extender",
  "description": "Get more information about AppExchange Listings",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png",
    "matches": [
      "https://appexchange.salesforce.com/appxListingDetail*"
    ]
  },
  "permissions": [
    "clipboardWrite"   
  ],
  "content_scripts": [
    {
      "js": ["scripts/main.js"],
      "matches": [
        "https://appexchange.salesforce.com/appxListingDetail*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/shareVars.js"
      ],
      "matches": [
        "https://appexchange.salesforce.com/*"
      ]
    }
  ]
}